{
  "$schema": "https://schema.tauri.app/config/2.0.0",
  "productName": "JSPad",
  "version": "0.1.0",
  "identifier": "com.jspad.app",
  "build": {
    "beforeDevCommand": "~/.bun/bin/bun run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "~/.bun/bin/bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "JSPad",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  }
}
